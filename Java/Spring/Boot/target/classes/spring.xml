<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />
    <context:component-scan base-package="Spring"/>

    <!-- bean definitions here -->
    <bean id="cat" class="com.plekhanov.xmlBeans.Cat" scope="prototype"/>
    <bean id="mouse" class="com.plekhanov.xmlBeans.Mouse" />
    <bean id="bird" class="com.plekhanov.xmlBeans.Bird" factory-method="getBird"/>
    <bean id="monkey" class="com.plekhanov.xmlBeans.Monkey">
        <constructor-arg value="5"/>
    </bean>
    <bean id="fish" class="com.plekhanov.xmlBeans.Fish">
        <property name="speed" value="12"/>
    </bean>

     
</beans>
